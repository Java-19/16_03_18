<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sheygam.java_19_16_03_18.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Second activity"
        android:id="@+id/start_second_btn"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start name activity"
        android:layout_below="@id/start_second_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/start_name_btn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:hint="User name"
        android:layout_below="@id/start_name_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/name_txt"/>

</RelativeLayout>
